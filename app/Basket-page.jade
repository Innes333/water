doctype html
html.no-js(lang="en")
	include templates/structure/head
	body
		include templates/structure/header-inner
		section#content.product-card-basket
			div.cont-wrap
				div.item-in-basket.mb1
					div.container-fluid
						div.row
							div.col-sm-1
								img(src="img/bottle-0.jpg")
							div.col-sm-11
								div.product-options.mt4
									div.product.size
										span.option-name Size:
										div.options
											ul
												li.active 450ml
												li 600ml
									div.product-color
										span.option-name Color:
										div.options
											ul
												- var productColor = 0
												while productColor < 4
													if(productColor==0)
														li(style="background: url('img/color-"+ productColor++ +".jpg')" class="active")
													else
														li(style="background: url('img/color-"+ productColor++ +".jpg')")
									div.product-count
										span.option-name Count:
										div.options
											span.input-number-decrement –
											input(class="input-number" type="text" value="1" min="1" max="100")
											span.input-number-increment +
									div.product-price
										span.option-name Price: 
										div.options
											ul 
												li.active.big 46.00$
										button(type="button" title="Remove from basket" class="close")
											i.fa.fa-close
				div.item-in-basket.mb1
					div.container-fluid
						div.row
							div.col-sm-1
								img(src="img/bottle-2.jpg")
							div.col-sm-11
								div.product-options.mt4
									div.product.size
										span.option-name Size:
										div.options
											ul
												li.active 450ml
												li 600ml
									div.product-color
										span.option-name Color:
										div.options
											ul
												- var productColor = 0
												while productColor < 4
													if(productColor==2)
														li(style="background: url('img/color-"+ productColor++ +".jpg')" class="active")
													else
														li(style="background: url('img/color-"+ productColor++ +".jpg')")
									div.product-count
										span.option-name Count:
										div.options
											span.input-number-decrement –
											input(class="input-number" type="text" value="1" min="1" max="100")
											span.input-number-increment +
									div.product-price
										span.option-name Price: 
										div.options
											ul 
												li.active.big 46.00$
										button(type="button" title="Remove from basket" class="close")
											i.fa.fa-close

					div.total
						div.container-fluid
							div.row
								div.col-sm-6
									p.dib.mt2 Order Total:
									h4.dib.mt2.title.black 92$
								div.col-sm-6.right									
									button(type="button" class="btn mt2") Checkout
						
		include templates/structure/footer
		include templates/structure/scripts