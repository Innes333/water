doctype html
html.no-js(lang="en")
	include templates/structure/head
	body
		include templates/structure/header-inner
		section.shipping
			.container
				div.row
					div.col-md-7
						h3.title.left Shipping and payment
						.contact-info
							span Shipping address:
							span.shipping-address Fulton st 45, 90, Atlanta GA 30334, United States
							a(href="Checkout.html" class="link") Edit
						
						form.mt3.shipping-form
							-
								var shippingList = [{
									name: 'Ground Shipping',
									shortName: 'ground-ship',
									price: '5$',
									checked: false
								}, {
									name: 'FedEx 2Day',
									shortName: 'fedex-2',
									price: '12$',
									checked: true
								}, {
									name: 'FedEx Overnight',
									shortName: 'fedex-night',
									price: '16$',
									checked: false
								}]
							for shipping in shippingList	
								.form-group.shipping-choice
									.row
										.col-xs-1
											input(type="radio" name="fancy-radio" id=shipping.shortName checked=shipping.checked)
											label(for=shipping.shortName)
										.col-xs-9
											.shipping-name= shipping.name
										.col-xs-2.right
											.shipping-price= shipping.price

						.payment
							div(id="paypal-button-container")						
							

					.col-md-5.order-list
						h3.title.left Order
						.ordered-products
							.container-fluid
								.row.w-product
									.col-xs-2
										img(src="/img/bottle-3.jpg" class="lazy")
									.col-xs-6
										.product-name Blue bottle
										.product-detail 500ml
									.col-xs-1
										.product-count 2
									.col-xs-3
										.product-price Price: 45$
								.row.w-product
									.col-xs-2
										img(src="/img/bottle-1.jpg" class="lazy")
									.col-xs-6
										.product-name Blue bottle
										.product-detail 500ml
									.col-xs-1
										.product-count 1
									.col-xs-3
										.product-price Price: 45$
								
						
						.discount
							form(action="")
								.form-group
									input(type="text" id="discount" value)
									label(for="discount") Discount code
									button.btn Apply

						.order-price
							.subtotal
								.name Subtotal
								.price 100$
							.shipping
								.name Shipping
								.price 12$
							.total
								.name Total
								.price 112$		

										
											
		include templates/structure/footer
		include templates/structure/scripts